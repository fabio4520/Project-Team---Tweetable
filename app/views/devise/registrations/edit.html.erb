<section class="section-md">
  <div class="container flex flex-column wrap text-center items-center mb-4">
    <h2 class="mb-4 heading--sm">Edit Profile <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field flex flex-column text-left mb-4">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true%>
      </div>

      <div class="field flex flex-column text-left mb-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field flex flex-column text-left mb-4">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true%>
      </div>

      <div class="field flex flex-column text-left mb-4">
        <%= f.label :avatar, style: "display: block" %>
        <%= f.file_field :avatar %>
      </div>
      
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field flex flex-column text-left mb-4">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password",
        placeholder: "*********" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field flex flex-column text-left mb-4">
        <%= f.label :password_confirmation %><br />
        <% if current_user.avatar.attached? %>
          <div>
            <%= image_tag(current_user.avatar) %>
          </div>
        <% end %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
        placeholder: "*********" %>
      </div>

      <div class="field flex flex-column text-left mb-4">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password",
        placeholder: "*********" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "button button--primary mb-4"%>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %>

  </div>
</section>
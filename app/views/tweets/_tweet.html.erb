<div id="<%= dom_id tweet %>", class="card">
  <div class="card__head">
    <div>
      <% if tweet.user.avatar.attached? %>
        <div>
          <%= image_tag tweet.user.avatar, class: "index--img" %>
        </div>
      <% end %>
    </div>

    <div>
      <div>
        <span class="name" ><%= tweet.user.name %></span>
        <span class=""username>@<%= tweet.user.username %></span>
      </div>

      <span class="times_ago">
        <%= ((Time.zone.now - tweet.updated_at) / 1.minutes).floor %>
        minutes ago
      </span>
    </div>
  </div>

  <p>
    <%= tweet.body %>
  </p>
  
  <div class="card__body--icons">
    <div class="flex_icons" >
      <div >
        <%= link_to edit_tweet_path(tweet) do%>
          <%= image_tag("comment_icon.png")%>
        <% end %>
      </div>
      <div>
        <span><%= tweet.threads.count %></span>
      </div>
    </div>

    <div class="flex_icons">
      <div>
        <%= render "likes/form", like: tweet.likes.new(user:current_user) %>
      </div>
      <div>
        <span><%= tweet.likes.count %></span>
      </div>  
    </div>
  </div>

</div>
